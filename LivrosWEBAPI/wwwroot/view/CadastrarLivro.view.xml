<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.CadastrarLivro"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
>
	<Page
		title="{i18n>tituloListaDeLivros}"
		showNavButton="true"
		navButtonPress=".aoClicarEmBotaoVoltar"
		id= "formularioDeCadastro"
	>
	<headerContent>
		<Toolbar>
			<Button
				icon="sap-icon://save"
				text="Salvar"
				press="aoClicarEmBotaoSalvar"
			/>
		</Toolbar>
	</headerContent>

		<l:VerticalLayout
			class="sapUiContentPadding"
			width="50%"
		>
			<Label
				text="Titulo"
				labelFor="input-titulo"
				required="true"
				
			/>
			<Input
				id="input-titulo"
				required="true"
				value="{livro>/titulo}"
			/>
			<Label
				text="Editora"
				labelFor="input-editora"
				required="true"
			/>
			<Input
				id="input-editora"
				required="true"
				value="{livro>/editora}"
			/>
			<Label
				text="Autor"
				labelFor="input-autor"
				required="true"
			/>
			<Input
				id="input-autor"
				required="true"
				value="{livro>/autor}"
				
			/>
			<Label
				text="Data de lanÃ§amento"
				labelFor="DT"
				required="true"
			/>
			<DateTimePicker
				valueFormat="yyyy-MM-ddTHH:mm:ss"
				id="DT"
				required="true"
				displayFormat="short"
				class="sapUiSmallMarginBottom"
				value="{livro>/lancamento}"
				
			/>
		</l:VerticalLayout>
	</Page>
</mvc:View>